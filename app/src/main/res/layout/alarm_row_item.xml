<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_title"
        android:textStyle="bold"
        android:textSize="@dimen/alarm_titleSize"/>

    <TextView
        android:id="@+id/alarm_time"
        android:text="@string/time_example"
        android:layout_below="@id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/alarm_infoSize"
        android:layout_margin="@dimen/alarm_infoMargin"/>
    <Button
        android:id="@+id/alarm_deleteBtn"
        android:layout_below="@id/alarm_title"
        android:layout_toRightOf="@id/alarm_time"
        android:text="@string/alarm_delete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Switch
        android:id="@+id/alarm_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>